@{
    Layout = "_LayoutRecoveredPassword";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/Login/PasswordRecovery.css">
    <script src="~/js/Login/PasswordRecovery.js" defer></script>
</head>

<div class="login_div">
    <div class="logo_div">
        <a href="~/Home/Index"><img src="../images/login_logo.png" alt="" class="" /></a>
    </div>
    <form>
        <div class="form-group">
            
            <i class="fas fa-user-circle" id="left_icon"></i>
            <input type="text" placeholder="Username" id="txtUserName" value="@ViewBag.userID" class="form-control" />

        </div>

        @* error message for empty field *@
        <div id="username_notif" style="display:none;">
            <i class="fas fa-times" style="color:red;"></i>
            <span style="color:red; font-weight: bold;">Please enter Username</span>            
        </div>
        <div>
            <span style="color: #6c757d;">
                @TempData["RecoveryMessage"]
            </span>
        </div>
        <input type="button" value="Recover Password" class="login_btn" onclick="recoverPassword()" />

    </form>
    <div class="follow_block pt-2 pb-2">
        <ul class="social_icons">
            <li>
                <a href="https://www.virevo.it/" target="_blank">
                    <img src="../images/virevo.png" alt="">
                </a>
            </li>
            <li>
                <a href="https://www.linkedin.com/company/virevo/" target="_blank">
                    <img src="../images/linkedin.png" alt="">
                </a>
            </li>
            <li>
                <a href="https://www.instagram.com/virevo_digital_kaizen/" target="_blank">
                    <img src="../images/instagram.png" alt="">
                </a>
            </li>

            <li>
                <a href="https://rb.gy/tmmod" target="_blank">
                    <img src="../images/youtube.png" alt="" />
                </a>
            </li>
        </ul>
    </div>
</div>
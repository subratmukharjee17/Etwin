<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] Etwin</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<link rel="icon" href="~/images/favicon.png" type="image/x-icon" />
	<!-- Google Fonts -->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,300;0,400;0,700;1,400;1,700&display=swap"
		  rel="stylesheet">

	<link href="~/css/EtwinResponsive.css" rel="stylesheet" />
	<link href="~/css/StyleSheet.css" rel="stylesheet" />
	<style>
		img.main-image {
			/* Set rules to fill background */
			min-height: 100%;
			min-width: 1024px;
			/* Set up proportionate scaling */
			width: 100%;
			height: auto;
			/* Set up positioning */
			position: fixed;
			top: 0;
			left: 0;
		}

	</style>
</head>
<body>

	<div class="container-fluid p-0" style="height:100%;">
		<main role="main" class="pb-3" style=" width: 100%; height: 100vh; background-image: url('../images/BackgroundLogin.png');background-size: cover;">
			@RenderBody()
		</main>
	</div>

	<!-- ======= Footer ======= -->
	<!-- End Footer -->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>
